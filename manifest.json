{
    "manifest_version": 3,
    "name": "LinguaLoop Language Assistant",
    "version": "1.0",
    "description": "Transform YouTube into the world's most powerful language immersion platform by one-click single sentence loop.",
    "permissions": ["activeTab", "storage", "scripting"],
    "host_permissions": ["https://*.youtube.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["content.js"],
        "css": ["subtitles.css"],
        "run_at": "document_idle"
      }
    ]
  }